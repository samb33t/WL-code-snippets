{
	// Place your snippets for wolfram here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"Comment":{
		"prefix":"com",
		"body": "(* $1 *)",
		"description": "Insert Comment"
	},

	"Title":{
		"prefix":"comt",
		"body":[
			"(* ::Title:: *)",
			"(*$1*)"
		],
		"description": "Insert Title"
	},

	"Subtitle":{
		"prefix":"comst",
		"body":[
			"(* ::Subtitle:: *)",
			"(*$1*)"
		],
		"description": "Insert Subtitle"
	},

	"Chapter":{
		"prefix":"comc",
		"body":[
			"(* ::Chapter:: *)",
			"(*$1*)"
		],
		"description": "Insert Chapter"
	},

	"Section":{
		"prefix":"coms",
		"body":[
			"(* ::Section:: *)",
			"(*$1*)"
		],
		"description": "Insert Section"
	},

	"Subsection":{
		"prefix":"comss",
		"body":[
			"(* ::Subsection:: *)",
			"(*$1*)"
		],
		"description": "Insert Subsection"
	},

	"Subsubsection":{
		"prefix":"comsss",
		"body":[
			"(* ::Subsubsection:: *)",
			"(*$1*)"
		],
		"description": "Insert Subsubsection"
	},

	"Text":{
		"prefix":"comtxt",
		"body":[
			"(* ::Text:: *)",
			"(*$1*)"
		],
		"description": "Insert Text"
	},

	"Package":{
		"prefix":"pkg",
		"body": [
			"(* ::Section:: *)",
			"(*Package Header*)",
			"BeginPackage[\"$1\"]",
			"(* ::Section:: *)",
			"(*Usage statements*)",
			"$2",
			"(* ::Section:: *)",
			"(*Starting Private context*)",
			"Begin[\"Private`\"]",
			"(* ::Section:: *)",
			"(*Function definitions*)",
			"",
			"(* ::Subsection:: *)",
			"(*$3*)",
			"$4",
			"(* ::Section:: *)",
			"(*End Private context*)",
			"End[]",
			"(* ::Section:: *)",
			"(*End Package*)",
			"EndPackage[]"
		],
		"description": "Package file meta identifier"
	}
}